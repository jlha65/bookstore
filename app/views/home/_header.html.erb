<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to 'Home', root_path, class:"nav-link" %>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Books', books_path, class:"nav-link" %>
        </li>
        
        <% if user_signed_in? %>
            <% if current_user.is_seller %>
                <li class="nav-item">
                    <%= link_to 'Create Book Listing', new_book_path, class:"nav-link" %>
                </li>
            <% end %>
            <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :get, class:"nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to 'My Profile', edit_user_registration_path, class:"nav-link" %>
            </li>
        <% else %>
            <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Sign In', new_user_session_path, class:"nav-link" %>
            </li>
        <% end %>
      </ul>
      <form class="d-flex">

        <%= simple_form_for :search, url: books_path, method: "GET", html: { class: 'form-control me-2', type: 'search', placeholder: 'search' } do |f| %>
        <%= f.input :title, label: false, input_html: {value: "", class: 'form-control'}, placeholder: 'search'  %>
        <%= f.submit "Search", class: "btn btn-outline-success" %>
        <% end %>
      </form>
    </div>
  </div>
</nav>
