<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-label">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-label">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control" %>
  </div>

  <div class="form-label">
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author, class:"form-control" %>
  </div>

  <div class="form-label">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

  <div class="form-label">
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock, class:"form-control" %>
  </div>

  <div class="form-label">
    <%= form.label :available, style: "display: block" %>
    <%= form.check_box :available, checked: true, class:"form-check-input" %>
  </div>

  <div class="form-label">
    <%= form.text_field :user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
